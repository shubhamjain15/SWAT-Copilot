# SWAT-Copilot Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=SWAT-Copilot
DEBUG=false
LOG_LEVEL=INFO

# SWAT Project Configuration
DEFAULT_SWAT_PROJECT_PATH=/path/to/your/swat/project

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# API Keys (uncomment and add your keys)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# MCP Server Configuration
MCP_SERVER_NAME=swat-copilot
MCP_SERVER_VERSION=0.0.1
MCP_TRANSPORT=stdio

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Visualization Settings
PLOT_STYLE=seaborn-v0_8
PLOT_DPI=100
